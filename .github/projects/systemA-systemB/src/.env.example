# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=integration
RABBITMQ_PASSWORD=integration_secret
RABBITMQ_VHOST=integration

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=integration
POSTGRES_PASSWORD=integration_secret
POSTGRES_DB=integration_platform

# Queues
QUEUE_A_TO_B=queue.a.to.b
QUEUE_B_TO_A=queue.b.to.a
QUEUE_DLQ=queue.dlq

# Retry Policy
RETRY_MAX_ATTEMPTS=18
RETRY_INITIAL_DELAY_MS=1000
RETRY_MAX_DELAY_MS=300000
RETRY_MULTIPLIER=2

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
