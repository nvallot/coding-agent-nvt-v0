{
  "version": "2.0.0",
  "description": "Configuration globale des agents GitHub Copilot",
  "agents": [
    {
      "id": "ba",
      "name": "Business Analyst",
      "file": ".github/agents/business-analyst.md",
      "description": "Analyse métier, exigences, user stories",
      "model": "gpt-4o",
      "temperature": 0.6,
      "triggers": ["**/requirements/**", "**/specifications/**", "**/docs/brd*"],
      "handoffs": ["architecte"]
    },
    {
      "id": "architecte",
      "name": "Architecte",
      "file": ".github/agents/architecte.md",
      "description": "Architecture Azure, TAD, ADRs, Infrastructure as Code",
      "model": "gpt-4o",
      "temperature": 0.5,
      "triggers": ["**/docs/**", "**/Deployment/**", "**/architecture/**", "**/*.tf"],
      "handoffs": ["developpeur", "business-analyst"]
    },
    {
      "id": "developpeur",
      "name": "Developpeur",
      "file": ".github/agents/developpeur.md",
      "description": "Implémentation code, tests, pipelines data",
      "model": "gpt-4o",
      "temperature": 0.4,
      "triggers": ["**/(src|Functions|Development)/**", "**/*.cs", "**/*.py", "**/*.sql"],
      "handoffs": ["reviewer", "architecte"]
    },
    {
      "id": "reviewer",
      "name": "Reviewer",
      "file": ".github/agents/reviewer.md",
      "description": "Revue de code, qualité, sécurité, compliance",
      "model": "gpt-4o",
      "temperature": 0.3,
      "triggers": ["**/pull_requests/**", "**/*.cs", "**/*.py", "**/*.sql"],
      "handoffs": ["developpeur"]
    }
  ],
  "settings": {
    "defaultModel": "gpt-4o",
    "maxTokens": 4096,
    "enableHandoffs": true,
    "enableTools": true,
    "enableInstructions": true,
    "instructionsDirectory": ".github/instructions",
    "clientConfigDirectory": ".github/clients"
  },
  "routing": {
    "requirements": "business-analyst",
    "specifications": "business-analyst",
    "architecture": "architecte",
    "code": "developpeur",
    "tests": "developpeur",
    "review": "reviewer",
    "pullrequests": "reviewer"
  }
}

